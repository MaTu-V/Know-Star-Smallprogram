/* 导入图标字体样式 */
@import "/zykt/public/classify-icon.wxss";
/* 页面大小 */
page{
  width: 100%;
  height: 100%;
  background: var(--white);
}
/* flex布局 */
.flex-row{
  display: flex;
  flex-direction: row;
}
.flex-column{ 
  display: flex;
  flex-direction: column;
}
.flex-row-between{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.flex-row-around{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.flex-column-around{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.flex-1{
  flex: 1;
}
.flex-2{
  flex: 2;
}
.flex-3{
  flex: 3;
}
.flex-4{
  flex: 4;
}
.flex-5{
  flex: 5;
}
.flex-6{
  flex: 6;
}
.flex-7{
  flex: 7;
}
.flex-8{
  flex: 8;
}
.flex-9{
  flex: 9;
}
.flex-10{
  flex: 10;
}
/* 字体 */
.text-small{
  font-size: 24rpx;
}
.text-normal{
  font-size: 30rpx;
}
.text-middle{
  font-size: 40rpx;
}
.text-lg{
  font-size: 60rpx;
}

.text-weight-sm{
  font-weight: 500;
}
.text-weight-md{
  font-weight: 600;
}
.text-weight-lg{
  font-weight: 900;
}
.text-center{
  text-align: center;
}
.text-left{
  text-align: left;
  margin-left: auto;
}
.text-right{
  text-align: right;
  margin-right: auto;
}
.text-indent{
  text-indent: 36rpx;
}
.text-shadow{
   text-shadow: 0 0 2px rgba(100, 33, 33, 0.2);
}
.text-white{
  color: white;
}
.text-gray{
  color: gray;
}
.text-yellow{
  color: #FFEB00;
}
.text-orange{
  color: orange;
}
.text-blue{
  color: rgb(36, 143, 231);
}
.text-green{
  color: #39b54a;
}
.text-black{
  color: #333333;
}
.text-pink{
  color:#F52932;
}
/* 禁止换行 */
.white-space{
  overflow: hidden;
  white-space:nowrap;
  text-overflow: ellipsis;
}
/* 边框 */
.border-width{
  border-width: 80%;
  margin: 0 auto;
}
.border-top{
  border-top: 1px solid #eeeeee;
}
.border-right{
  border-right: 1px solid #eeeeee;
}
.border-bottom{
  border-bottom: 1px solid #eeeeee;
}
.border-left{
  border-left: 1px solid #eeeeee;
}
.border-shadow{
  -moz-box-shadow:0px 0px 15px rgba(0, 0, 0, 0.2), 0px 0px 0px rgba(0, 0, 0, 0.2);       -webkit-box-shadow:0px 0px 15px rgba(0, 0, 0, 0.2), 0px 0px 0px rgba(0, 0, 0, 0.2);
   box-shadow:0px 0px 15px rgba(0, 0, 0, 0.2), 0px 0px 0px rgba(0, 0, 0, 0.2);
}
.boreder-dashed{
  border-bottom: 1px dashed #eeeeee;
}
.boreder-none{
  border-bottom: none;
}
.border-radius{
  border: 1px solid #eeeeee;
  border-radius: 30rpx;
}
/* 上下间距 */
.padding{
  padding: 22rpx;
}
.margin{
  margin: 0rpx 18rpx;
}
.margin-top{
  margin-top: 20rpx;
}
.margin-left{
  margin-right: auto;
}
.margin-right{
  margin-left: auto;
}

.margin-bottom{
  margin-bottom: 20rpx;
}
.margin-bottom-lg{
  margin-bottom: 30rpx;
}

/* 背景色 */
.bg-white{
  background: white;
}
.bg-green{
  background: #39b54a;
}
/* 圆角 */
.radius{
 border-radius:20rpx;
}
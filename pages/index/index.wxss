/* pages/index/index.wxss */
@import "/zykt/public/public.wxss";
/* 页面主体 */
.index-container{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.logo{
  width: 100%;
  height: auto;
  margin: 280rpx auto 100rpx auto;
}
.logo .logo-image{
  width: 100%;
  height: 400rpx;
}
/* 按钮样式 */
input{
  outline:none; 
  border:none;
  list-style: none;
}
.login-button,.login-button::after{
  width: 75%;
  margin: 0 auto;
  padding: 25rpx 0;
  border: none;
  border-radius: 80rpx;
  background: rgba(255, 226, 8, 1);
  color: black;
  font-size: 35rpx;
  font-weight: 600;
  line-height: inherit;
}